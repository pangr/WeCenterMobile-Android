<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/flAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" >

            <com.loopj.android.image.SmartImageView
                android:id="@+id/ivHomeListItemAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar_default" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar_masker" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvHomeListItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textColor="#E8783A" />

        <TextView
            android:id="@+id/tvHomeListIteAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:text=""
            android:textColor="#D3D3D3" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHomeListItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/llHomeListItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvHomeListItemAgreeCount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="#FF7C47"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvHomeListItemBestAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="回答详情"
            android:textColor="#86898A" />
    </LinearLayout>

</LinearLayout>